pipeline {
    agent any
    environment {
        MAVEN_HOME = '/opt/apache-maven-3.9.9' // Ganti sesuai lokasi Maven di server Anda
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
        SONARQUBE_URL = 'http://localhost:9000'
        SONAR_TOKEN = credentials('sonarqube') // Token SonarQube di Jenkins Credentials
        PROJECT_KEY = 'crm-pro'
    }

    stages {
        stage('Set Environment') {
            steps {
                script {
                    echo "Maven Home: ${MAVEN_HOME}"
                }
            }
        }

        stage('Build and Test') {
            steps {
                // Gunakan Maven yang ada di server
                sh 'mvn clean test'
            }
        }

        stage('Sonarqube Analysis') {
            steps {
                echo 'Running SonarQube Analysis...'
                sh "mvn sonar:sonar -Dsonar.projectKey=${PROJECT_KEY} -Dsonar.host.url=${SONARQUBE_URL} -Dsonar.login=${SONAR_TOKEN}"
            }
        }

        stage('Quality Gate Check') {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Membersihkan workspace
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
